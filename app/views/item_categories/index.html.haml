.container.mt-2
  %h4.d-inline CATEGORIES
  .pull-right
    = link_to 'Add Category', '#', class: 'btn btn-default btn-raised btn-primary mb-2', 'data-toggle': 'modal', 'data-target': '#add_category_modal'
  %table.table.table-striped
    %thead
      %tr
        %th.w-75 Name
        %th.w-25 Actions
    %tbody
      - @item_categories.each do |category|
        %tr
          %td= category.name
          %td
            = link_to 'Items', item_category_items_path(category), class: 'btn btn-sm btn-success btn-raised'
            = link_to edit_item_category_path(category), data: {remote: true}, class: 'pl-3' do
              = fa_icon 'edit'
            = link_to item_category_path(category), method: :delete, data: {confirm: 'Are you sure, you want to delete this category?'}, class: 'pl-3' do
              = fa_icon 'trash'
  = will_paginate @item_categories
#edit_category
= render 'item_categories/new'
